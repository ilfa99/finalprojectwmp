<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyClinicApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/cat_teal</item>
        <item name="colorSecondaryVariant">@color/cat_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/bg_grey</item>
    </style>

    <style name="ScheduleChip">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="background">@drawable/bg_search</item>
    </style>

    <style name="TimeChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/bg_search</item>
    </style>

</resources>